<div class="editinfomaindiv">
  <div class="editdelisdiv">
    <!--<div class="editmenu">-->
    <!--<ul>-->
    <!--<li><a href="JavaScript:void(0);" class="activ">Edit</a></li>-->
    <!--<li><a href="JavaScript:void(0);">Options</a></li>-->
