<div class="profieldiv">
  <h6>Payment</h6>
</div>
<div class="clearboth"></div>
<div class="settingsblock leftfull2">


  <%= form_for @order, :url => checkout_path(@product.code), :method => :post, :html => {:id => "new_order"} do |f| %>
      <%= f.hidden_field :stripe_card_token %>

      <div class="settingsinput">
        <%= label_tag :card_number, "Credit Card Number" %>
        <%= text_field_tag :card_number, nil, name: nil, :class => "shartabinput" %>
      </div>
      <div class="settingsinput">
        <%= label_tag :card_code, "Security Code on Card (CVV)" %>
        <%= text_field_tag :card_code, nil, name: nil, :class => "shartabinput" %>
      </div>
      <div class="settingsinput">
        <%= label_tag :card_month, "Card Expiration" %>
        <%= select_month nil, {add_month_numbers: true}, {name: nil, id: "card_month"} %>
        <%= select_year nil, {start_year: Date.today.year, end_year: Date.today.year+15}, {name: nil, id: "card_year"} %>
      </div>
      <div id="stripe_error">
        <noscript>JavaScript is not enabled and is required for this form. First enable it in your web browser settings.
        </noscript>
      </div>
      <div class="settingsinput whitebg bdBnone">
        <label><%= number_to_currency @product.price, :unit => "$" %></label>
        <%= f.submit "Place my order",class:"uploastyle2" %>
        <%= link_to "Cancel", from_code_path(@product.code), :class => "uploastyle3" %>
      </div>
  <% end %>
  <div class="clearboth"></div>
</div>

<style>
 #stripe_error{
     color: red;
     font-size: 15px;
 }
</style>