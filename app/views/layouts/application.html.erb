<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
  <title><%= content_for?(:title) ? yield(:title) : "AirSpace" %></title>
  <%= csrf_meta_tags %>
  <%= javascript_include_tag "https://js.stripe.com/v1/" %>
  <%= tag :meta, :name => "stripe-key", :content => STRIPE_PUBLIC_KEY %>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
</head>

<body>
<%= render :partial => "layouts/social" %>
<div class="warpperfull">
  <div class="headermid">
    <div class="headerdelis">
      <div class="logodiv"><a href="#"><img src="/assets/logo.png" border="0" alt="" width="56" height="57"/></a></div>
      <%= render :partial => "layouts/navbar" %>
    </div>
  </div>
</div>
<div class="clearboth"></div>
<% if @layout == :sell %>
    <div class="informationdiv2">
      <%= yield %>
    </div>
<% else %>
    <div class="conntendmid">
      <div class="contentdelis">
        <%= bootstrap_flash %>
        <div class="<%= content_for?(:container_div_class) ? yield(:container_div_class) : 'informationdiv' %>">
          <div class="<%= content_for?(:container_div_class) ? yield(:container_div_class) : 'productdiv' %>">
            <%= yield %>
            <div class="clearboth"></div>
          </div>
        </div>
      </div>
    </div>
<% end %>

<div class="footerfull">
  <div class="footermid">
    <div class="fooermater">2014 &copy; Airspace
      <div class="shareiconsfooter">
        <a href="#"><img src="/assets/share_facebook.png" width="28" height="28" alt="Share on Facebook" title="Share with Facebook"/></a>
        <a href="#"><img src="/assets/share_twitter.png" width="28" height="28" alt="Share on Twitter" title="Share with Twitter"/></a>
        <a href="#"><img src="/assets/share_blog.png" width="28" height="28" alt="Share on Twitter" title="Share on Blog"/></a>


      </div>
    </div>
  </div>
</div>

</body>
</html>
